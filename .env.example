# SparkLearn Kids Environment Variables
# Copy this file to .env and fill in your actual values

# App Configuration
REACT_APP_NAME=SparkLearn Kids
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=10000

# Authentication
REACT_APP_JWT_SECRET=your-super-secret-jwt-key-here
REACT_APP_SESSION_TIMEOUT=86400000

# Third-Party Services
# SMS Notifications (Twilio)
REACT_APP_TWILIO_ACCOUNT_SID=your-twilio-account-sid
REACT_APP_TWILIO_AUTH_TOKEN=your-twilio-auth-token
REACT_APP_TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Notifications (SendGrid)
REACT_APP_SENDGRID_API_KEY=your-sendgrid-api-key
REACT_APP_SENDGRID_FROM_EMAIL=noreply@sparklearn.com
REACT_APP_SENDGRID_FROM_NAME=SparkLearn Kids

# Payment Processing (Stripe)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
REACT_APP_STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/sparklearn_kids
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sparklearn_kids
DB_USER=postgres
DB_PASSWORD=your-db-password

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=sparklearn-kids-assets

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_MIXPANEL_TOKEN=your-mixpanel-token

# Error Monitoring
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Feature Flags
REACT_APP_ENABLE_AI_COMPANION=true
REACT_APP_ENABLE_3D_WORLDS=true
REACT_APP_ENABLE_VOICE_COMMANDS=false
REACT_APP_ENABLE_AR_FEATURES=false

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug
GENERATE_SOURCEMAP=true

# Security
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,https://sparklearn.com
REACT_APP_CORS_ORIGINS=http://localhost:3000
REACT_APP_RATE_LIMIT_WINDOW=900000
REACT_APP_RATE_LIMIT_MAX=100

# Deployment
REACT_APP_DEPLOY_ENV=development
REACT_APP_BUILD_HASH=dev-build